{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "esnext.asynciterable",
      "ES2015",
      "Dom",
      "Dom.Iterable",
      "ScriptHost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "removeComments": true,
    "skipLibCheck": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        ["env", {
          "loose": true,
          "modules": false,
        }],
        ["react"]
      ],
      "plugins": [
        "babel-plugin-styled-components",
        "react-hot-loader/babel"
      ]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
